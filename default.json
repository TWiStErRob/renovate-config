{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":disableRateLimiting",
		":disableDependencyDashboard",
		"github>TWiStErRob/renovate-config:group/all",
		"github>TWiStErRob/renovate-config:major-as-minor/all"
	],
	"commitMessageExtra": "from {{{currentValue}}} to {{{newValue}}}{{#if isMajor}} (major v{{{newMajor}}}){{else}} ({{#if isSingleVersion}}v{{{newVersion}}}){{else}}{{/if}}{{/if}}",
	"separateMajorMinor": true,
	"separateMultipleMajor": true,
	"separateMinorPatch": true,
	"ignorePaths": [
		"do-not-ignore-anything"
	],
	"packageRules": [
	]
}
